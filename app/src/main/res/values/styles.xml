<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/dandongshi</item>
        <item name="colorPrimaryDark">@color/dandongshi_dark</item>
        <item name="colorAccent">@color/dandongshi</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TranslucentStatusTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PopupAnim">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>
