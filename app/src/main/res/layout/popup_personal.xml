<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dandongshi_light"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personal_rl_update_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_item_height"
        android:layout_marginTop="@dimen/setting_focus_item_interval"
        android:background="@android:color/white"
        android:clickable="true"
        android:foreground="?android:selectableItemBackgroundBorderless">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改昵称"
            android:textColor="@android:color/black"
            android:textSize="@dimen/setting_focus_size_of_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_rl_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_item_height"
        android:layout_marginTop="@dimen/setting_focus_item_interval"
        android:background="@android:color/white"
        android:clickable="true"
        android:foreground="?android:selectableItemBackgroundBorderless">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="从图库中选择"
            android:textColor="@android:color/black"
            android:textSize="@dimen/setting_focus_size_of_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_rl_recover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_item_height"
        android:layout_marginTop="@dimen/setting_focus_item_interval"
        android:background="@android:color/white"
        android:clickable="true"
        android:foreground="?android:selectableItemBackgroundBorderless">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="恢复默认"
            android:textColor="@android:color/black"
            android:textSize="@dimen/setting_focus_size_of_title" />
    </RelativeLayout>

</LinearLayout>